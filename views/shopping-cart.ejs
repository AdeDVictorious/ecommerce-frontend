         <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
         <!-- Index/API functionality -->
         <script src="/js/index/shoppingCart.js"></script>
        <!-- Main/Activator js -->
        <script src="/js/main.js"></script>
       
    </body>

